{
  "caseyProtocol": {
    "version": "1.0.0",
    "description": "High-security AI validation configuration - Casey Protocol",
    "securityLevel": "strict",
    "enabled": true
  },
  
  "intersectScanner": {
    "enabled": true,
    "scanDepth": "comprehensive",
    
    "hallucinationPatterns": [
      "flying elephants",
      "free unlimited access",
      "guaranteed results",
      "instant approval",
      "admin password is",
      "credit card number",
      "social security",
      "download virus"
    ],
    
    "biasKeywords": [
      "women can't",
      "men are better",
      "only white",
      "all [race/ethnicity] are",
      "too old for",
      "girls shouldn't",
      "boys don't",
      "real men",
      "act like a lady"
    ],
    
    "toxicityPatterns": [
      "kill yourself",
      "you're worthless",
      "hate speech",
      "racial slur",
      "violent threat"
    ],
    
    "piiPatterns": [
      "\\b\\d{3}-\\d{2}-\\d{4}\\b",
      "\\b\\d{16}\\b",
      "\\b[A-Z0-9._%+-]+@[A-Z0-9.-]+\\.[A-Z]{2,}\\b"
    ]
  },
  
  "fulcrumFilter": {
    "enabled": true,
    "description": "Adversarial input detection",
    
    "promptInjectionPatterns": [
      "ignore previous instructions",
      "disregard all rules",
      "forget your training",
      "you are now",
      "system: override",
      "admin mode activated",
      "jailbreak",
      "pretend you are"
    ],
    
    "dataExfiltrationPatterns": [
      "print your source code",
      "reveal your prompt",
      "show training data",
      "dump database",
      "export all users"
    ]
  },
  
  "charlesCarmichael": {
    "enabled": true,
    "description": "PII sanitization and anonymization",
    
    "sanitizationRules": {
      "emails": "REDACTED_EMAIL",
      "ssn": "XXX-XX-XXXX",
      "creditCards": "XXXX-XXXX-XXXX-XXXX",
      "phoneNumbers": "XXX-XXX-XXXX",
      "ipAddresses": "XXX.XXX.XXX.XXX"
    }
  },
  
  "stayInTheCar": {
    "enabled": true,
    "description": "Quarantine suspicious outputs before production",
    
    "quarantineThresholds": {
      "suspicionScore": 0.7,
      "autoQuarantineOnBias": true,
      "autoQuarantineOnPII": true,
      "autoQuarantineOnToxicity": true
    },
    
    "fallbackBehavior": "safe_default_response"
  },
  
  "nerdHerd": {
    "enabled": true,
    "alertThreshold": "medium",
    
    "integrations": {
      "jira": {
        "enabled": false,
        "url": "https://your-domain.atlassian.net",
        "project": "AIWATCH",
        "apiToken": "ENV:JIRA_API_TOKEN"
      },
      "github": {
        "enabled": false,
        "repo": "owner/repo",
        "label": "ai-validation-alert",
        "apiToken": "ENV:GITHUB_API_TOKEN"
      },
      "slack": {
        "enabled": false,
        "webhookUrl": "ENV:SLACK_WEBHOOK_URL",
        "channel": "#ai-alerts"
      },
      "email": {
        "enabled": false,
        "recipients": ["devops@company.com"],
        "smtpServer": "ENV:SMTP_SERVER"
      }
    },
    
    "localLogging": {
      "enabled": true,
      "filePath": "Saved/AICastle_Alerts.txt",
      "maxFileSizeMB": 100,
      "rotateOnSize": true
    }
  },
  
  "morganMode": {
    "enabled": false,
    "description": "Verbose debug logging for development",
    "logLevel": "verbose",
    "logAllDecisions": true,
    "includeStackTraces": true
  },
  
  "orionNetwork": {
    "enabled": false,
    "description": "Distributed validation across multiple instances",
    "consensusRequired": 3,
    "endpoints": []
  },
  
  "ringIntel": {
    "enabled": false,
    "description": "ML-based pattern learning (requires training)",
    "modelPath": "Models/RingIntel.onnx",
    "confidenceThreshold": 0.85,
    "continuousLearning": false
  },
  
  "buyMoreCover": {
    "enabled": true,
    "description": "Safe mode fallback system",
    
    "triggerConditions": {
      "consecutiveFailures": 3,
      "criticalBiasDetected": true,
      "piiLeakDetected": true
    },
    
    "safeModeActions": {
      "disableGenerativeAI": true,
      "useCannedResponses": true,
      "notifyAdministrators": true,
      "requireManualReactivation": true
    }
  },
  
  "metrics": {
    "enabled": true,
    "trackLatency": true,
    "trackAccuracy": true,
    "reportingInterval": 300,
    
    "exporters": {
      "console": true,
      "file": true,
      "prometheus": false,
      "datadog": false
    }
  },
  
  "compliance": {
    "gdpr": {
      "enabled": false,
      "rightToBeForgotten": true,
      "dataMinimization": true
    },
    "coppa": {
      "enabled": false,
      "ageVerification": true,
      "parentalConsent": true
    },
    "hipaa": {
      "enabled": false,
      "phiDetection": true,
      "auditLogging": true
    }
  },
  
  "musicIndustry": {
    "enabled": true,
    "description": "Music industry-specific AI validation patterns",
    
    "aiMusicDetection": {
      "enabled": true,
      "confidenceThreshold": 0.7,
      "indicators": [
        "perfect_timing_variance_below_0.05",
        "synthetic_timbre",
        "harmonic_complexity_below_0.3",
        "pattern_repetition_above_0.8",
        "unnatural_pitch_correction"
      ]
    },
    
    "copyrightProtection": {
      "enabled": true,
      "sampleLengthThreshold": 3,
      "melodySimilarityThreshold": 0.85,
      "lyricMatchThreshold": 0.7,
      "requireClearance": true,
      "databases": [
        "shazam_fingerprint",
        "gracenote",
        "musicbrainz",
        "rights_management_orgs"
      ]
    },
    
    "lyricContentValidation": {
      "enabled": true,
      "checkExplicitContent": true,
      "checkHateSpeech": true,
      "checkCulturalSensitivity": true,
      "checkBias": true,
      
      "explicitPatterns": [
        "profanity",
        "sexual_content",
        "drug_references",
        "violence"
      ],
      
      "hateSpeechPatterns": [
        "racial_slurs",
        "ethnic_discrimination",
        "religious_hate",
        "lgbtq_slurs",
        "ableist_language"
      ],
      
      "culturalSensitivity": [
        "sacred_terms_misuse",
        "cultural_appropriation",
        "stereotyping",
        "religious_mockery"
      ],
      
      "biasDetection": [
        "gender_stereotypes",
        "racial_bias",
        "age_discrimination",
        "body_shaming",
        "socioeconomic_bias"
      ],
      
      "trademarkIssues": [
        "unauthorized_brand_mentions",
        "false_endorsements",
        "trademark_infringement"
      ]
    },
    
    "metadataValidation": {
      "enabled": true,
      "requiredFields": [
        "artist_name",
        "track_title",
        "isrc",
        "copyright_year",
        "rights_holder",
        "publisher",
        "label"
      ],
      
      "isrcFormat": "^[A-Z]{2}-[A-Z0-9]{3}-\\d{2}-\\d{5}$",
      "verifyArtistCredits": true,
      "verifyContributors": true,
      
      "validationRules": [
        "no_future_copyright_years",
        "valid_isrc_format",
        "primary_artist_required",
        "rights_holder_verified",
        "complete_credits"
      ]
    },
    
    "recommendationBias": {
      "enabled": true,
      "checkGenderBias": true,
      "checkGeographicBias": true,
      "checkLabelFavoritism": true,
      "checkEraBias": true,
      "checkPopularityBias": true,
      
      "diversityThresholds": {
        "genderImbalanceMax": 0.7,
        "geographicImbalanceMax": 0.8,
        "majorLabelMax": 0.85,
        "popularOnlyMax": 0.9,
        "eraImbalanceMax": 0.7
      },
      
      "fairnessMetrics": [
        "demographic_parity",
        "equal_opportunity",
        "geographic_diversity",
        "label_balance",
        "emerging_artist_exposure"
      ]
    },
    
    "royaltyValidation": {
      "enabled": true,
      "verifySplits": true,
      "verifyRates": true,
      "calculationTolerance": 0.01,
      
      "validationChecks": [
        "splits_sum_to_100_percent",
        "all_contributors_paid",
        "no_unauthorized_recipients",
        "amounts_match_percentages",
        "minimum_payment_thresholds"
      ],
      
      "auditRequirements": {
        "logAllCalculations": true,
        "trackChanges": true,
        "requireApprovals": true,
        "monthlyReconciliation": true
      }
    },
    
    "sampleClearance": {
      "enabled": true,
      "requirePreClearance": true,
      "minimumSampleLength": 2,
      "checkMelodic": true,
      "checkLyrical": true,
      "checkRhythmic": true,
      
      "clearanceTypes": [
        "master_recording",
        "composition_publishing",
        "synchronization",
        "mechanical"
      ]
    },
    
    "contentRatings": {
      "enabled": true,
      "systems": [
        "parental_advisory",
        "explicit_content_label",
        "age_restrictions",
        "content_warnings"
      ],
      
      "autoTagging": {
        "explicit": true,
        "violence": true,
        "drugs": true,
        "mature_themes": true
      }
    }
  }
}
